
#! /bin/bash
echo 'Hello World!'
# This is a comment.

# Command - ls -al 
# Desc - To cheack file permission.

# Command - chmod +x filename
# Desc - To give excute permission to file.

echo $BASH
echo $BASH_VERSION
echo $HOME
echo $PWD

# user defined variable
name=Balasaheb
echo $name


# Take user input
echo 'plz enter your name : '
read name
echo "The name is : $name"

# Take user input in same line
read -p 'plz enter username : ' username
read -sp 'plz enter passwoed : ' password
echo "username : $username $password"

# Take array input
echo 'plz enter names : '
read -a names
echo "${names[0]}, ${names[1]}, ${names[2]}"

# Take default input in REPLY
echo 'plz enter something : '
read 
echo "You entered : $REPLY"


# Pass arguments to bash scripts
args=("$@")
echo "${args[0]} ${args[1]}"

# To print all passed arguments
echo $@

# To print how many number of argument passed.
echo $#










